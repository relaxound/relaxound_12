<template>
    <div t-name="web_edit_user_filter.Popover">

        <div class="list-group">
            <t t-foreach="values" t-as="value">
                <a class="list-group-item list-group-item-action"
                   t-attf-data-value="#{typeof value.value === 'object' ? value.value.attrs.domain : value.value}">
                    <span>
                        <t t-esc="value.label"/>
<!--                        <t t-esc="ir.filters.owner"/>-->

                    </span>
<!--                    <a t-if="ir.filters._isMyselfAuthor()" data-oe-model="ir.filters" t-att-data-oe-id='ir.filters.user_id' href=''>edit</a>-->

                    <button class="btn btn-sm btn-link pull-right">
                        <span class="fa fa-close" />
                    </button>
                </a>
            </t>
        </div>
    </div>

    <t t-name="web_edit_user_filter.PopoverTemplate">
        <div class="popover o-edit-user-filter-popover" role="tooltip">
            <h3 class="popover-header"></h3>
            <div class="arrow"></div>
<!--            <button type="button" string="Edit" class="btn btn-primary js_edit_menu fa fa-pencil" aria-label="Edit menu" title="Edit menu"/>-->

            <div class="popover-body"></div>
        </div>
    </t>
</template>
