<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="edit_filter_wizard_form_view">
        <field name="name">sale.edit_filter</field>
        <field name="model">editfilter.wizard</field>
        <field name="arch" type="xml">
            <form string="Edit Filter">
                <group>
                    <field name="name"/>
                    <field name="user_id"/>
                </group>
                <footer>
                    <button name="edit1" type="object" string="Edit Filter 1" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>


    <record model="ir.actions.act_window" id="edit_filter_wizard_form_view">
			<field name="name">Edit Filters</field>
            <field name="type">ir.actions.act_window</field>
			<field name="res_model">editfilter.wizard</field>
			<field name="view_mode">form</field>
            <field name="target">current</field>

    </record>


</odoo>
