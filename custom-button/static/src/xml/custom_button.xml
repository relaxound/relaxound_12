    <t t-extend="ActionpadWidget">
        <t t-jquery="button[class='button pay']" t-operation="replace">
                <button t-attf-class='button set-customer-invoice #{ ( widget.pos.get_client() and widget.pos.get_client().name.length > 10) ? "decentered" : "" }' >
