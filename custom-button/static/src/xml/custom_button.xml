                        </t>
                </button>

                <button t-attf-class='button set-customer-shipping #{ ( widget.pos.get_client() and widget.pos.get_client().name.length > 10) ? "decentered" : "" }'>
                    <i class='fa fa-user' role="img" aria-label="Customer" title="Customer"/>
                    <t t-if="widget.pos.get_client()">
                        <t t-esc="widget.pos.get_client().name" />
                    </t>
                    <t t-if="!widget.pos.get_client()">
                        Shipping Address
                    </t>
                </button>
                <button class='control-button pay'>
                    <div class='pay-circle'>
                        <i class='fa fa-chevron-right' role="img" aria-label="Pay" title="Pay"/>
                        Payment
                    </div>
                </button>
        </t>

